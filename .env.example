# OpenAI Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Azure OpenAI Configuration (Alternative)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-turbo

# Supabase Configuration (for database)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Vector Database Configuration
FAISS_INDEX_PATH=/data/faiss_index
VECTOR_DIMENSION=1536
INDEX_TYPE=IVF_FLAT
NLIST=1024

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL=3600
MAX_CACHE_SIZE=1000000

# API Gateway Configuration
API_HOST=0.0.0.0
API_PORT=8000
RATE_LIMIT_PER_MINUTE=1000
MAX_CONCURRENT_REQUESTS=100

# Vector Service Configuration
VECTOR_SERVICE_HOST=0.0.0.0
VECTOR_SERVICE_PORT=8001
NUM_WORKER_THREADS=8
BATCH_SIZE=32

# Compliance Configuration
ENABLE_DATA_REDACTION=true
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_LEVEL=INFO
PII_DETECTION_THRESHOLD=0.8

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=INFO
METRICS_ENABLED=true

# Azure Configuration (for deployment)
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_RESOURCE_GROUP=neurorag-rg
AZURE_AKS_CLUSTER=neurorag-aks
AZURE_CONTAINER_REGISTRY=neuroragacr.azurecr.io

# Database Configuration (for audit logs)
DATABASE_URL=postgresql://user:password@localhost:5432/neurorag
DATABASE_POOL_SIZE=20

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Performance Tuning
MAX_QUERY_LENGTH=2000
MAX_CONTEXT_LENGTH=8000
EMBEDDING_BATCH_SIZE=100
VECTOR_SEARCH_TIMEOUT=50

# Feature Flags
ENABLE_LIME_EXPLANATIONS=true
ENABLE_SHAP_EXPLANATIONS=false
ENABLE_SEMANTIC_CACHING=true
ENABLE_QUERY_OPTIMIZATION=true